{
  "name": "@opencomments/backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opencomments/types": "workspace:*",
    "@types/pg": "^8.15.6",
    "better-auth": "^1.3.34",
    "bun-plugin-tailwind": "^0.1.2",
    "hono": "^4.10.4",
    "pg": "^8.16.3",
    "tailwind": "^4.0.0"
  },
  "scripts": {
    "dev": "bun --watch index.ts",
    "build": "echo 'Dependencies installed - Wrangler will bundle TypeScript automatically'",
    "deploy": "wrangler deploy --env=\"\" --env-file=./.env",
    "deploy:production": "wrangler deploy --env production --env-file=./.env",
    "deploy:staging": "wrangler deploy --env staging --env-file=./.env",
    "set-secrets": "bash scripts/set-secrets.sh ./.env production",
    "set-secrets:staging": "bash scripts/set-secrets.sh ./.env staging"
  }
}
